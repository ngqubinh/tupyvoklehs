@using Application.ViewModels.User;
@model EditUserRoleVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Role</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body, html {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa;
        }

        .form-container {
            max-width: 600px;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

            .form-container h2 {
                margin-bottom: 20px;
                font-size: 28px;
                font-weight: bold;
                color: #333;
                text-align: center;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
            padding: 15px;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            display: block;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .text-danger {
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Cập Nhật Vai Trò</h2>
        <form asp-action="EditRole" method="post">
            <div class="form-group">
                <label asp-for="CurrentRole" class="control-label">Vai trò hiện tại</label>
                <input asp-for="CurrentRole" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NewRole" class="control-label">Chọn vai trò mới</label>
                <select asp-for="NewRole" class="form-control">
                    <option value="@Domain.Constants.StaticUserRole.USER">User</option>
                    <option value="@Domain.Constants.StaticUserRole.STAFF">Staff</option>
                    <option value="@Domain.Constants.StaticUserRole.MANAGER">Manager</option>
                </select>
                <span asp-validation-for="NewRole" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
</body>
</html>
