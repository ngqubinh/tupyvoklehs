@model IEnumerable<Domain.Models.Auth.User>

<h2>User Management</h2>
<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="EditUserRole" asp-route-userId="@user.Id" class="btn btn-primary">Edit Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
