@model Domain.Models.Management.WishList

@{
    ViewData["Title"] = "Delete Wishlist Item";
}

<h2>Delete Wishlist Item</h2>

<h3>Are you sure you want to delete this item from your wishlist?</h3>
<div>
    <h4>@Model.Product.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.ProductName
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.Description
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.ProductPrice
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
