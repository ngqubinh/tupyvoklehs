@using Application.DTOs.Response.Management
@model IEnumerable<StockResponse>

@{
    ViewData["Title"] = "Stock";
}

<h2>Stocks</h2>

<form asp-action="Stock" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25" placeholder="Search by book" />
    <button type="submit" class="btn btn-primary">Find</button>
    <a asp-action="Stock" asp-controller="Stock" class="btn btn-primary">Clear</a>
</form>

<table class="table table-bordered">
    <tr>
        <th>Products</th>
        <th>Stock</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="ManangeStock" asp-controller="Stock" asp-route-productId="@item.ProductId" class="btn btn-info"> Update Stock</a>
            </td>
        </tr>
    }
</table>

