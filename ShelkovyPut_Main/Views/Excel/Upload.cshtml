@{
    ViewBag.Title = "Import Data";
}

<h2>Import Data</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="ImportBrands" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Select Excel File for Brands</label>
                    <input type="file" class="form-control" name="file" />
                </div>
                <button type="submit" class="btn btn-primary">Upload Brands</button>
            </form>
        </div>

        <div class="col-md-6">
            <form asp-action="ImportCategories" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Select Excel File for Categories</label>
                    <input type="file" class="form-control" name="file" />
                </div>
                <button type="submit" class="btn btn-primary">Upload Categories</button>
            </form>
        </div>

        <div class="col-md-6">
            <form asp-action="ImportProducts" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Select Excel File for Products</label>
                    <input type="file" class="form-control" name="file" />
                </div>
                <button type="submit" class="btn btn-primary">Upload Products</button>
            </form>
        </div>
    </div>
</div>
