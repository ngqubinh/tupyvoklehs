@model IEnumerable<Domain.Models.Management.Order>

<h2>Pending or Checked Out Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Email</td>
                <td>@order.OrderStatus?.StatusName</td>
                <td>
                    <form asp-action="DecideToShip" method="post">
                        <input type="hidden" name="id" value="@order.Id" />
                        <button type="submit" name="decision" value="true" class="btn btn-success">Ship</button>
                        <button type="submit" name="decision" value="false" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
